<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="275dp"
    android:layout_height="220dp"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Config Your Password"
        style="@style/Normal_text_style_white"
         />

    <LinearLayout
        android:layout_width="275dp"
        android:layout_height="140dp"
        android:layout_marginTop="10dp"
        android:background="#ffc8c8c8"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:text="Please Input Your Password"
            android:textColor="#ff000000"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_first_entry_pwd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dip"
            android:text="Please Input Your Password Again"
            android:textColor="#ff000000"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_first_entry_confirm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="275dp"
        android:layout_height="45dip"
        android:background="#ffc8c8c8"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_first_dialog_confirm"
            android:layout_width="125dip"
            android:layout_height="35dip"
            android:layout_marginRight="20dip"
            android:background="@drawable/button_selector"
            android:text="Confirm"
            android:textSize="14sp" />

        <Button
            android:id="@+id/bt_first_dialog_cancel"
            android:layout_width="125dip"
            android:layout_height="35dip"
            android:text="Cancel"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>