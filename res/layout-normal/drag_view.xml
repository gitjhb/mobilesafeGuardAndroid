<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc000000"
    android:orientation="vertical" >

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_drag_view"
        android:layout_marginTop="120dp"
        android:textStyle="bold"
        android:gravity="center"
  	style="@style/Normal_text_style_red_large"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@drawable/change_location_bg1"
        android:text="Press on the Blue image to change Location" />

    <ImageView
        android:id="@+id/iv_drag_view"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:background="@drawable/change_location_bg2" />

</RelativeLayout>