<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:background="@drawable/change_location_bg2"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_app_manager_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Antivirus"
            android:textColor="@android:color/white"
            android:textSize="40sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_antivirus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@drawable/main_circle_bg_scan" />

    <ProgressBar
        android:id="@+id/pb_antivirus"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip" />

    <ScrollView
        android:id="@+id/sv_antivirus"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dip" >

        <LinearLayout
            android:id="@+id/ll_antivirus"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

</LinearLayout>