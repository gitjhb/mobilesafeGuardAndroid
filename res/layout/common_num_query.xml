<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:background="@drawable/change_location_bg2"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_app_manager_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Common Phone Numbers"
            android:textColor="@android:color/white"
            android:textSize="35sp" />
    </LinearLayout>

    <ExpandableListView
        android:listSelector="@drawable/item_background_selector"
        android:id="@+id/elv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:groupIndicator="@drawable/elvselector" >
    </ExpandableListView>

</LinearLayout>