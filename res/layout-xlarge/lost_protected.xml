<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:background="@drawable/title_background"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="protecting you now "
            android:textColor="#FFF8F8F8"
            android:textSize="34sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"

        android:background="#ffffffff" >
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_perms_call" >
        </ImageView>

        <TextView
            android:id="@+id/tv_lost_protected_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:text="SafeNumber"
            android:textColor="#ff0000"
            android:textSize="24sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="5dip"
        android:background="#ffffffff" >
    </View>

    <CheckBox
        android:layout_marginLeft="5dip"
        android:id="@+id/cb_isprotecting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SafeGuard is unused"
        android:textSize="24sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="5dip"
        android:background="#ffffffff" >
    </View>

    <LinearLayout
        android:id="@+id/ll_reentry_setup_guide"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_trash_system_trash" >
        </ImageView>

        <TextView
            android:id="@+id/tv_reentry_setup_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:text="Re setUP"
            android:textColor="#ff0000"
            android:textSize="24sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="5dip"
        android:background="#ffffffff" >
    </View>

    <TextView
        android:layout_marginLeft="5dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="#*location*# Get cellPhone Location\n#*delete*# Set your cellPhone Reboot\n#*lockscreen*# LockScreen your CellPhone with Passward\n#*alram*# Alarm Music"
        android:textColor="#FF00ff66"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="5dip"
        android:background="#ffffffff" >
    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal|center_vertical" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/home_virus_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal|center_vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textView1"
            android:src="@drawable/yhe_yiding_50" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView1"
            android:layout_alignParentLeft="true"
            android:text="@string/information_copyright"
            android:textColor="#ffff0000"
            android:textSize="22sp" />
    </RelativeLayout>

</LinearLayout>