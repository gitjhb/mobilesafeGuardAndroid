<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc000000"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_drag_view"
        android:layout_width="320dp"
        android:layout_height="120dp"
        android:background="@drawable/change_location_bg2" />

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_drag_view"
        android:layout_marginTop="120dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#ff0000"
        android:textSize="30sp"
        android:layout_width="500dp"
        android:layout_height="120dp"
        android:background="@drawable/change_location_bg1"
        android:text="Press on the Blue image to change Location" />

</RelativeLayout>